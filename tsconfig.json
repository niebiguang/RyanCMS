{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es7",
      "dom"
    ],
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "./app/*"
      ],
      "@/client/*": [
        "./client/*"
      ],
    },
  },
  "include": [
    "app",
    "client",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
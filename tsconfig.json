{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es7", "dom"],
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./*"],
      "@ant-design/icons/lib/dist": ["client/src/config/icons.ts"],
      "@/*": ["client/src/*"]
    }
  },
  "include": ["src/**/*", "src/*", "client/**/*", "client/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

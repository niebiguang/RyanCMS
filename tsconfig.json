{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es7",
      "dom"
    ],
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDirs": [
      "app",
      "client",
      "typings"
    ],
    "paths": {
      "@/app/*": [
        "./app/*"
      ],
      "@/client/*": [
        "./client/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "app/*",
    "client/**/*",
    "client/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}